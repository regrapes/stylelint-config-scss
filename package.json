{
  "name": "@regrapes/stylelint-config-scss",
  "version": "0.1.0",
  "description": "REGRAPES SCSS-Stylelint config",
  "keywords": [
    "stylelint",
    "stylelint-config",
    "stylelint-scss"
  ],
  "license": "ISC",
  "author": "REGRAPES GmbH",
  "main": "index.js",
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx",
    "semantic-release": "semantic-release"
  },
  "prettier": "@regrapes/eslint-config/prettier",
  "eslintConfig": {
    "extends": [
      "@regrapes/eslint-config",
      "@regrapes/eslint-config/rules/prettier"
    ]
  },
  "dependencies": {
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.0.0"
  },
  "devDependencies": {
    "@regrapes/eslint-config": "^1.7.1",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "semantic-release": "^18.0.0"
  },
  "peerDependencies": {
    "stylelint": "^14.0.0"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "package.json",
            "package-lock.json"
          ],
          "message": "chore(release): ðŸš€ ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  }
}
